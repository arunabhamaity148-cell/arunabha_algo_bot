{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfig": {
      "aptPackages": ["ta-lib", "build-essential", "python3-dev", "gcc", "g++", "make"]
    }
  },
  "deploy": {
    "startCommand": "gunicorn main:app --workers 2 --threads 2 --timeout 120 --bind 0.0.0.0:$PORT",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
